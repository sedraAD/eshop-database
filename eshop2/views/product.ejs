<%- include("header", {title: title}); %>

<h1>Products</h1>

<p><a href="product/create">+ Add new product</a></p>

<table border="1">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>In Stock</th>
        <th>Categories</th>
        <th>Actions</th>
    </tr>
    <% products.forEach(product => { %>
        <tr>
            <td><%= product.produktkod %></td>
            <td><%= product.namn %></td>
            <td><%= product.pris %></td>
            <td><%= product.lagerantal %></td>
            <td><%= product.kategorier %></td>
            <td>
                <a href="/eshop/product/edit/<%= product.produktkod %>">Edit</a>
                <a href="/eshop/product/delete/<%= product.produktkod %>" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
            </td>

        </tr>
    
    <% }) %>
</table>

<%- include("footer"); %>