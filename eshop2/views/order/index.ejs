<%- include("../header", {title: title}); %>

<h1>Order overview</h1>

<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Date</th>
            <th>Rows</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        <% orders.forEach(order => { %>
            <tr>
                <td><%= order.ordernummer %></td>
                <td><%= order.kund_id %></td>
                <td><%= order.created_at.toISOString().split('T')[0] %></td>
                <td><%= order.antal_rader %></td>
                <td><%= order.status %></td>
                <td><a href="/eshop/order/<%= order.ordernummer %>">View</a></td>
            </tr>
        <% }) %>
    </tbody>
</table>

<p><a href="/eshop/customer" >‚Üê Back to customers</a></p>

